<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/layaout_redondo"
    android:layout_marginBottom="8dp">

    <!-- Sección izquierda: Equipos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivEscudoLocal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@drawable/golmasterlogo" />

            <TextView
                android:id="@+id/tvEquipoLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivEscudoVisitante"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@drawable/golmasterlogo" />

            <TextView
                android:id="@+id/tvEquipoVisitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sección derecha: Hora del partido -->
    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold" />
</LinearLayout>
