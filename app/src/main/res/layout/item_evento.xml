<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#4B4B4B"
    android:layout_marginBottom="8dp">

    <!-- Ícono del evento -->
    <ImageView
        android:id="@+id/ivIconoEvento"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_evento_placeholder"
        android:contentDescription="Ícono del evento"
        android:layout_marginEnd="8dp" />

    <!-- Minuto -->
    <TextView
        android:id="@+id/tvMinutoEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34'"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="8dp" />

    <!-- Jugador -->
    <TextView
        android:id="@+id/tvJugadorEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lionel Messi"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="8dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcionEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golazo de tiro libre"
        android:textSize="16sp"
        android:textColor="@android:color/white" />
</LinearLayout>
